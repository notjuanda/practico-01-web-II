<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>

    <%- include('components/header') %>

    <main class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-center">Restaurantes</h1>
            <a href="/lugares/create" class="btn btn-primary">Crear Restaurante</a>
        </div>

        <div class="row">
            <% if (lugares && lugares.length > 0) { %>
                <% lugares.forEach(lugar => { %>
                    <div class="col-md-4 mb-4">
                        <a href="/lugares/<%= lugar.id %>/hamburguesas" class="text-decoration-none">
                            <div class="card h-100">
                                <img src="<%= lugar.foto ? lugar.foto : '/images/default-restaurant.jpg' %>" class="card-img-top" alt="<%= lugar.nombre %>">
                                <div class="card-body">
                                    <h5 class="card-title"><%= lugar.nombre %></h5>
                                    <p class="card-text"><%= lugar.direccion %></p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center">No hay restaurantes disponibles.</p>
            <% } %>
        </div>
    </main>

    <%- include('components/footer') %>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
