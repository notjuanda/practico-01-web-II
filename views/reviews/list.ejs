<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>

    <%- include('../components/header') %>

    <main class="container my-5">
        <h1 class="text-center">Lista de Reviews</h1>

        <div class="row">
            <% reviews.forEach(review => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Hamburguesa: <%= review.hamburguesa.nombre %></h5>
                            <p class="card-text">Puntuaci√≥n: <%= review.puntuacion %></p>
                            <p class="card-text">Comentario: <%= review.comentario %></p>
                            <p class="card-text"><small class="text-muted">Usuario: <%= review.usuario.nombre %> <%= review.usuario.apellido %></small></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <a href="/reviews/create" class="btn btn-primary">Crear Nueva Review</a>
    </main>

    <%- include('../components/footer') %>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
