<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>

    <%- include('../components/header') %>

    <main class="container my-5">
        <h1 class="text-center">Reseñas de la Hamburguesa</h1>
        
        <div class="row">
            <% if (reviews && reviews.length > 0) { %>
                <% reviews.forEach(review => { %>
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">Puntuación: <%= review.puntuacion %> estrellas</h5>
                                <p class="card-text">Comentario: <%= review.comentario %></p>
                                <p class="card-text"><small class="text-muted">Usuario: <%= review.usuario.nombre %> <%= review.usuario.apellido %></small></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center">No hay reseñas para esta hamburguesa.</p>
            <% } %>
        </div>

        <a href="/hamburguesas" class="btn btn-secondary">Volver a la lista de hamburguesas</a>
    </main>

    <%- include('../components/footer') %>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
